#!/usr/bin/env bash
# This script loops from 1 to 10 and displays different messages based on the loop iteration

# Counter variable
count=1

# Using a while loop to loop from 1 to 10
while [ $count -le 10 ]; do
    # Checking loop iteration and displaying appropriate message
    if [ $count -eq 4 ]; then
        echo "bad luck"
    elif [ $count -eq 8 ]; then
        echo "good luck"
    else
        echo "Best School"
    fi
    ((count++))
done

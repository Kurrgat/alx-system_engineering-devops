#!/usr/bin/env bash

# Check if user is root
if [ "$(id -u)" -ne 0 ]; then
    echo "Please run this script with sudo or as root"
    exit 1
fi

# Temporary file for editing
temp_file=$(mktemp)

# Modify /etc/hosts to change localhost resolution
sed 's/127.0.0.1/127.0.0.2/g' /etc/hosts > "$temp_file"

# Add facebook.com resolution to temporary file
echo "8.8.8.8 facebook.com" >> "$temp_file"

# Replace original /etc/hosts with edited file
cp "$temp_file" /etc/hosts

# Clean up temporary file
rm "$temp_file"
